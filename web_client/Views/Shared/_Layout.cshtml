<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    @{
                        if (Session["LoggedIn"] != null && (bool)Session["LoggedIn"])
                        {
                            @:Logged in as @Session["Login"]
                        }
                        else
                        {
                            @:Not logged in.
                        }
                    }
                </div>
                @* @Html.ActionLink("Имя приложения", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) *@
            </div>
            <div class="navbar-collapse collapse">
                                @* @Html.DisplayText(Context.Session["Login"]?.ToString()??"123"); *@
                <ul class="nav navbar-nav">


                    @* <li>@Html.ActionLink("Register implementation", "Register", "Home")</li> *@
                    @* <li>@Html.ActionLink("Login implementation", "Login", "Home")</li> *@

                    @* @Html.ActionLink("Домашняя страница", "Index", "Home") *@
                    @{
                        if (Session["Login"] != null)
                        {
                            @:<li>
                            @Html.ActionLink("Logout implementation", "Logout", "Home")
                            @:</li>
                            @:<li>
                            @Html.ActionLink("List users implementation", "ListUsers", "Home")
                            @:</li>
                        }
                        else

                        {
                            @:<li>
                            @Html.ActionLink("Register implementation", "Register", "Home")
                            @:</li>
                            @:<li>
                            @Html.ActionLink("Login implementation", "Login", "Home")
                            @:</li>
                        }
                    }


                    @* <li>@Html.ActionLink("Logout implementation", "Logout", "Home")</li> *@
                    @* <li>@Html.ActionLink("List users implementation", "ListUsers", "Home")</li> *@


                    @* <li>@Html.ActionLink("О программе", "About", "Home")</li> *@
                    @* <li>@Html.ActionLink("Контакт", "Contact", "Home")</li> *@
                </ul>
                    </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – приложение ASP.NET, <a href="https://github.com/gogasan24ru/bb-test">GitHub repository</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
